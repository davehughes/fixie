<div class="margin-toolbar-container">
	<div class="fixie-editor-content" contenteditable>{{{ text }}}</div>
	<div class="margin-toolbar">
		<div class="fixie-editor-toolbar btn-group btn-group-vertical">
			<button class="btn btn-default fixie-toolbar-item" data-fixie-cmd="bold">
                <i class="fa fa-bold icon-bold"></i>
            </button>
			<button class="btn btn-default fixie-toolbar-item" data-fixie-cmd="italic">
                <i class="fa fa-italic icon-italic"></i>
            </button>
			<button class="btn btn-default fixie-toolbar-item" data-fixie-cmd="insertOrderedList">
                <i class="fa fa-list-ol icon-list-ol"></i>
            </button>
			<button class="btn btn-default fixie-toolbar-item" data-fixie-cmd="insertUnorderedList">
                <i class="fa fa-list-ul icon-list-ul"></i>
            </button>
			<button class="btn btn-default fixie-toolbar-item" data-fixie-cmd="insertLink">
                <i class="fa fa-link icon-link"></i>
            </button>
		</div>
	</div>
</div>

